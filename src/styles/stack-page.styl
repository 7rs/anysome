sm =  400px
md =  800px
lg =  1200px

golden-ratio = (5 ** 0.5 + 1) / 2

text-size(size)
  font-size size
  line-height size * golden-ratio

.main-content
  max-width 900px

  h2, h3
    border-bottom solid 1px gray

  h2, h3, h4, h5, h6
    text-align start
    margin-top 2rem

  h2
    text-size(2rem)

    @media screen and (min-width md)
      text-size(2.25rem)

  h3
    text-size(1.75rem)

    @media screen and (min-width md)
      text-size(2rem)

  h4
    text-size(1.5rem)

  h5
    text-size(1.25rem)

  h6, p
    text-size(1rem)

  p
    margin-top 1rem
    margin-left 0.5rem
    margin-right 0.5rem
