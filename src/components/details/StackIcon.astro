---
import { Icon } from "astro-icon/components";
import { Image, inferRemoteSize } from "astro:assets";

export interface Props {
  icon?: string;
}
const { icon } = Astro.props;

const url = icon?.startsWith("url:") ? icon.slice(4) : undefined;
const { width, height } = await inferRemoteSize(url)
---

{
  url ? (
    <Image class="block my-6 mx-auto h-40 w-auto" src={url} width={width} height={height} alt="icon" />
  ) : (
    <Icon class="block  my-6 mx-auto h-40 w-auto" name={icon} />
  )
}
