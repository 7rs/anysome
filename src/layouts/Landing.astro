---
export interface Props {
  title: string;
  lang?: string;
}

import "../styles/global.sass"

const {title, lang = "en"} = Astro.props;
---

<html lang={lang}>
  <head>
    <title>{title}</title>
  </head>

  <body>
    <header>Anysome</header>
    <main><slot /></main>
    <footer>Licensed by CC0</footer>
  </body>
</html>

<style lang="sass">
  @import "../styles/def.sass"

  body
    display: flex
    flex-direction: column
    justify-content: space-between
    min-height: 100vh
    position: relative

  main
    @include margins(3rem, 0)
    height: 100%
    flex-grow: 1
    display: flex
    flex-direction: column
    row-gap: 3rem

  header
    position: sticky

  header, footer
    width: 100%
    background-color: black
    color: white
</style>
