{
    "printWidth": 120,
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": false,
    "semi": true,
    "endOfLine": "lf",
    "options.editorconfig": true,
    "plugins": [
        "prettier-plugin-astro",
        "prettier-plugin-svelte",
        "prettier-plugin-stylus"
    ],
    "overrides": [
        {
            "files": ["*.astro"],
            "options": {
                "parser": "astro"
            }
        },
        {
            "files": ["*.styl", "*.sass"],
            "options": {
                "trailingComma": "all"
            }
        }
    ]
}
